@page
@model PAMTestFlow.Pages.FlowBlox.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="template-input-boxes" style="margin:auto;">
    <h1>Edit</h1>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Template.TemplateID" />
                <div class="form-group">
                    <label asp-for="Template.TemplateName" class="control-label"></label>
                    <input asp-for="Template.TemplateName" class="form-control" style="width: 400px; margin: 10px;" />
                    <span asp-validation-for="Template.TemplateName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Created Date</label>
                    <input asp-for="Template.CreatedDate" class="form-control" style="width: 400px; margin: 10px;" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">Updated Date</label>
                    <input asp-for="Template.CreatedDate" class="form-control" style="width: 400px; margin: 10px;" readonly />
                </div>
                <div class="form-group">
                    <label class="control-label">WebsiteURL</label>
                    <input asp-for="Template.WebsiteURL" class="form-control" style="width: 400px; margin: 10px;"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                                        <button type="button" style="margin: 10px;" onclick="window.location.href='@Url.Page("Index")'" class="btn btn-secondary">Back to List</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
